// This macro will pre-cast an Explosion, 
// then will activate "stun punch" and give you a message "GO!" 
// [now you must go on your target to stun it!]
// If you stun your target the macro will give you a message "SUCCESS!" 
// and starts to cast the first Mindblast, 
// then it will launch an explo potion [with 1-2 sec. of delay] 
// and cast another Mindblast, on the same target. 
// And then another one.

// The mana cost of this sequence is 20 [Explo] + 16 [Mindblast] * 3 = 58 mana
// The spells will be casted with the right delay.


Orion.Cast("Explosion", Orion.TargetSystemSerial());
Orion.Wait('2550');
Orion.ClearJournal();
Orion.UseWrestlingStun();
Orion.Wait('100');
Orion.CharPrint(self, 0xFFFF, "GO!");
Orion.Wait('950');
if (Orion.WaitJournal("successfully", Orion.Now(), Orion.Now() + 3000, "sys")){
Orion.CharPrint(self, Orion.Random(0, 50), "SUCCESS!");
Orion.UseWrestlingStun();
Orion.Cast("Mind Blast", Orion.TargetSystemSerial());
    if (Orion.FindType('0x0F0D', '-1', 'self', true).lenght > 0); {
        Orion.UseType('0x0F0D', '-1', 'self', true);
        Orion.Wait(100);
        Orion.WaitForTarget(5000);
        Orion.CancelTarget();
        Orion.Cast("Energy Bolt", Orion.TargetSystemSerial());
        Orion.Wait('1000');
        Orion.UseType('0x0F0D', '-1', Orion.TargetSystemSerial(), true);
    }
Orion.Cast("Mind Blast", Orion.TargetSystemSerial());    
}
